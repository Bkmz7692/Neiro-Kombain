<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context=".MainActivity">

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayout"
        android:layout_width="344dp"
        android:layout_height="57dp"
        android:layout_marginBottom="400dp"
        android:background="@drawable/corner"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.452"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.119"
        app:tabIndicatorColor="@color/design_default_color_primary"
        app:tabRippleColor="@color/design_default_color_primary"
        app:tabTextAppearance="@style/TextAppearance.AppCompat.Medium"
        app:tabTextColor="@color/white">

        <com.google.android.material.tabs.TabItem
            android:id="@+id/tabItem4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ChatGPT"
            tools:layout_editor_absoluteX="30dp"
            tools:layout_editor_absoluteY="78dp" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/tabItem3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kandinsky"
            tools:layout_editor_absoluteX="140dp"
            tools:layout_editor_absoluteY="-15dp" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/tabItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Giga Chat" />
    </com.google.android.material.tabs.TabLayout>

    <Button
        android:id="@+id/sumbit"
        android:layout_width="60dp"
        android:layout_height="51dp"
        android:layout_marginStart="5dp"
        android:background="@android:drawable/ic_menu_send"
        android:backgroundTint="#AC0C0C"
        android:fontFamily="sans-serif-light"
        android:textColor="#DFDFDF"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/request"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.969" />

    <EditText
        android:id="@+id/request"
        style="@android:style/Widget.Holo.Light.EditText"
        android:layout_width="277dp"
        android:layout_height="50dp"
        android:background="@drawable/corner"
        android:ems="10"
        android:fontFamily="sans-serif-light"
        android:hint="Запрос"
        android:inputType="textMultiLine"
        android:paddingHorizontal="10sp"
        android:textAlignment="textStart"
        android:textColor="#FFEBEE"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.201"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.969" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="334dp"
        android:layout_height="508dp"
        android:orientation="vertical"
        android:verticalScrollbarPosition="right"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ProgressBar
            android:id="@+id/load"
            style="?android:attr/progressBarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <TextView
            android:id="@+id/result"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:breakStrategy="high_quality"
            android:fontFamily="sans-serif-light"
            android:overScrollMode="always"
            android:paddingTop="5sp"
            android:scrollIndicators="right"
            android:scrollbarAlwaysDrawVerticalTrack="true"
            android:scrollbars="vertical"
            android:scrollHorizontally="false"
            android:selectAllOnFocus="true"
            android:text="Скорее напишите ChatGPT!\n\n Что я умею:\n\n 1.Объяснять что-либо; \n 2.Писать сочинения\n 3. Переводить на разные языки"
            android:textAlignment="center"
            android:textColorHint="#FFFFFF"
            android:textIsSelectable="true"
            android:textSize="18sp"
            android:verticalScrollbarPosition="right" />

    </LinearLayout>

    <TextView
        android:id="@+id/count"
        android:layout_width="326dp"
        android:layout_height="39dp"
        android:layout_marginTop="127dp"
        android:layout_marginBottom="689dp"
        android:fontFamily="sans-serif-light"
        android:text="15/15"
        android:textAlignment="center"
        android:textColorHint="#FFFFFF"
        android:textSize="24sp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="319dp"
        android:layout_height="52dp"
        android:layout_marginBottom="700dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="69dp"
            android:layout_height="54dp"
            app:srcCompat="@android:drawable/ic_media_rew" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingVertical="10dp"
            android:text="ChatGPT"
            android:textAlignment="center"
            android:textSize="25sp" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:srcCompat="@android:drawable/ic_media_ff" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>