<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context=".MainActivity">

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayout"
        android:layout_width="344dp"
        android:layout_height="57dp"
        android:layout_marginBottom="300dp"
        android:background="@drawable/corner"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.452"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.119"
        app:tabIndicatorColor="@color/design_default_color_primary"
        app:tabRippleColor="@color/design_default_color_primary"
        app:tabTextAppearance="@style/TextAppearance.AppCompat.Medium">

        <com.google.android.material.tabs.TabItem
            android:id="@+id/tabItem4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ChatGPT"
            tools:layout_editor_absoluteX="30dp"
            tools:layout_editor_absoluteY="78dp" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/tabItem3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DaLLe-2"
            tools:layout_editor_absoluteX="202dp"
            tools:layout_editor_absoluteY="78dp" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/tabItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Giga Chat" />
    </com.google.android.material.tabs.TabLayout>

    <Button
        android:id="@+id/sumbit"
        android:layout_width="60dp"
        android:layout_height="51dp"
        android:layout_marginStart="5dp"
        android:background="@android:drawable/ic_menu_send"
        android:backgroundTint="#AC0C0C"
        android:fontFamily="sans-serif-light"
        android:textColor="#DFDFDF"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.06"
        app:layout_constraintStart_toEndOf="@+id/request"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.96" />

    <EditText
        android:id="@+id/request"
        style="@android:style/Widget.Holo.Light.EditText"
        android:layout_width="267dp"
        android:layout_height="57dp"
        android:background="@drawable/corner"
        android:ems="10"
        android:fontFamily="sans-serif-light"
        android:hint="Запрос"
        android:inputType="textMultiLine"
        android:paddingHorizontal="10sp"
        android:textAlignment="textStart"
        android:textColor="#FFEBEE"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.201"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.969" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="329dp"
        android:layout_height="414dp"
        android:orientation="vertical"
        android:verticalScrollbarPosition="right"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/count"
            android:layout_width="match_parent"
            android:layout_height="39dp"
            android:fontFamily="sans-serif-light"
            android:text="Осталось запросов: 15"
            android:textAlignment="center"
            android:textSize="17sp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/result"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:fontFamily="sans-serif-light"
            android:overScrollMode="always"
            android:paddingTop="5sp"
            android:scrollIndicators="right"
            android:scrollbarAlwaysDrawVerticalTrack="true"
            android:scrollbars="vertical"
            android:scrollHorizontally="false"
            android:selectAllOnFocus="true"
            android:text="Скорее напишите ChatGPT!"
            android:textAlignment="center"
            android:textIsSelectable="true"
            android:textSize="18sp"
            android:verticalScrollbarPosition="right" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>